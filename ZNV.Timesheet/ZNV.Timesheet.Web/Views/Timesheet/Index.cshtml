                        })
                    }
                },
                error: function (xhr, status, error) {
                    $.notify(error, {
                        globalPosition: "top center",
                        className: "error"
                    })
                }
            });
            //}
            return false;
        }

        function CreateNewTimesheet(bt) {
            //debugger;
            var newTr = $(bt).parent().parent().clone();
            $(newTr).insertAfter($(bt).parent().parent());
            var bts = $(newTr).find("a");
            if (bts.length == 1) {//需要增加一个移除的按钮
                $("<a class='btn btn-info btn-sm' title='移除一个工时' onclick='RemoveNewTimesheet(this)'>-</a>").insertAfter($(bts));
            }
            var dates = $(newTr).find("input[name='TimesheetDate']");
            if (dates.length > 0) {
                //先把id和class清空，否则无法绑定日历插件和正确赋值
                $(dates).removeAttr("id").removeAttr("class");
                $(dates).datepicker({
                    autoclose: true,
                    dateFormat: "yy-mm-dd",
                    minDate: $("#startDate").val(),
                    maxDate: $("#endDate").val(),
                    weekStart: 1,
                })
            }
            var inputId = $(newTr).find("input[name='inputId']");
            if (inputId.length > 0) {//新增的需要把id赋值为0，否则会把原先的给替换掉
                $(inputId).val(0);
            }
        }

        function RemoveNewTimesheet(bt) {
