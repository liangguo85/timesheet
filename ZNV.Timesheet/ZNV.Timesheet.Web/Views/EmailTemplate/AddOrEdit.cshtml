@model ZNV.Timesheet.EmailTemplate.EmailTemplate
@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEdit", "EmailTemplate", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.EmailTemplateCode, "邮件模板编码", new { @class = "control-label" })
        @Html.EditorFor(model => model.EmailTemplateCode, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EmailTemplateCode, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmailTemplateName, "邮件模板名称", new { @class = "control-label" })
        @Html.EditorFor(model => model.EmailTemplateName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EmailTemplateName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmailTemplateBody, "邮件模板编码", new { @class = "control-label" })
        @Html.TextAreaFor(model => model.EmailTemplateBody, new { @class = "form-control", @cols = 80, @rows = 10 })
        @Html.ValidationMessageFor(model => model.EmailTemplateBody, "", new { @class = "text-danger" })
    </div>
    <div class="form-group pull-right">
        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
    </div>
}
