
@model ZNV.Timesheet.ConfigurationManagement.Configuration
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "ConfigurationManagement", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.ConfigValue, "配置编码", new { @class = "control-label" })
        @Html.EditorFor(model => model.ConfigValue, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ConfigValue, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ConfigText, "配置文本", new { @class = "control-label" })
        @Html.EditorFor(model => model.ConfigText, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ConfigText, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ParentId, "父级配置", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.ParentId, (IEnumerable<SelectListItem>)ViewBag.Modules, String.Empty, new { id = "parentId", @class = "form-control" })
    </div>
    <div class="form-group pull-right">
        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
    </div>
}
