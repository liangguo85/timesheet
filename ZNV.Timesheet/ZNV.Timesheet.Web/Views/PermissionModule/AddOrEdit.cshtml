
@model ZNV.Timesheet.PermissionModule.PermissionModule
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "PermissionModule", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.ModuleCode, "模块编号", new { @class = "control-label" })
        @Html.EditorFor(model => model.ModuleCode, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ModuleCode, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ModuleName, "模块编号", new { @class = "control-label" })
        @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ParentModuleId, "父级模块", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.ParentModuleId, (IEnumerable<SelectListItem>)ViewBag.Modules, String.Empty, new { id = "parentModuleId", @class = "form-control" })
    </div>
    <div class="form-group pull-right">
        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
    </div>
}