@model ZNV.Timesheet.Timesheet.TimesheetForWeek
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditForWeek", "Timesheet", FormMethod.Post, new { onsubmit = "return SubmitFormForWeek(this)" }))
{
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box box-header">
                    <div class="btn-group-toggle">
                        <input type="hidden" id="startDate" value="@Model.startDate" />
                        <input type="hidden" id="endDate" value="@Model.endDate" />
                        <label>@Model.startDate</label>到<label>@Model.endDate</label>的工时
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="dtTimesheet" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="display:none"></th>
                                <th>日期</th>
                                <th>项目代码</th>
                                <th>工时</th>
                                <th>工作内容</th>
                                <th>备注</th>
                                <th>状态</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.TimesheetList.Count; i++)
                            {
                                var eleDisabled = (Model.TimesheetList[i].Status == "Draft" || Model.TimesheetList[i].Status == "" || Model.TimesheetList[i].Status == null) ? "" : " disabled ='disabled' ";//只有草稿状态的才能编辑
                                <tr>
                                    <td style="display:none">
                                        <input name="Id" type="hidden" value="@Model.TimesheetList[i].Id" />
                                        <input name="Approver" type="hidden" value="@Model.TimesheetList[i].Approver" />
                                        <input name="ApprovedTime" type="hidden" value="@Model.TimesheetList[i].ApprovedTime" />
                                        <input name="WorkflowInstanceID" type="hidden" value="@Model.TimesheetList[i].WorkflowInstanceID" />
                                        <input name="ProjectGroup" type="hidden" value="@Model.TimesheetList[i].ProjectGroup" />
                                    </td>
                                    <td>
                                        @if (Model.TimesheetList[i].TimesheetDate.HasValue)
                                        {
                                            <input name="TimesheetDate" style="width:100px" type="text" @eleDisabled value='@Model.TimesheetList[i].TimesheetDate.Value.ToString("yyyy-MM-dd")' />
                                        }
                                        else
                                        {
                                            <input name="TimesheetDate" type="text" @eleDisabled value='' />
                                        }
                                    </td>
                                    <td>
                                        <select name="ProjectID" style="width:100px" @eleDisabled>
                                            @foreach (var project in ViewData["Projects"] as List<SelectListItem>)
                                            {
                                                if (Model.TimesheetList[i].ProjectID.HasValue && project.Value == Model.TimesheetList[i].ProjectID.Value.ToString())
                                                {
                                                    <option value="@project.Value" selected="selected">@project.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@project.Value">@project.Text</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td><input type="text" name="Workload" @eleDisabled style="width:80px" value="@Model.TimesheetList[i].Workload" /></td>
                                    <td><input type="text" name="WorkContent" @eleDisabled style="width:100px" value="@Model.TimesheetList[i].WorkContent" /></td>
                                    <td><input type="text" name="Remarks" @eleDisabled style="width:100px" value="@Model.TimesheetList[i].Remarks" /></td>
                                    <td><input type="text" name="Status" style="width:60px;" disabled="disabled" value="@Model.TimesheetList[i].Status" /></td>
                                    <td>
                                        @if (Model.TimesheetList[i].Id == 0)
                                        {//显示加号和减号
                                            <a class='btn btn-info btn-sm' style="margin-right: 5px;" title="增加一个工时" onclick='CreateNewTimesheet(this)'>+</a>
                                            <a class='btn btn-info btn-sm' title="移除一个工时" onclick='RemoveNewTimesheet(this)'>-</a>
                                        }
                                        else
                                        {//只显示加号，因为数据已经存在不允许删除，可以到列表界面单独进行删除
                                            <a class='btn btn-info btn-sm' style="margin-right: 5px;" title="增加一个工时" onclick='CreateNewTimesheet(this)'>+</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <div class="form-group pull-right">
                        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
}
<script>
    $(document).ready(function () {
        //Date picker
        $("input[name='TimesheetDate']").datepicker({
            autoclose: true,
            dateFormat: "yy-mm-dd",
            minDate: $("#startDate").val(),
            maxDate: $("#endDate").val(),
            weekStart: 1,
        })
    })

</script>
