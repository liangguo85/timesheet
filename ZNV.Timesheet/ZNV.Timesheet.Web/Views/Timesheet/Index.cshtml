        function SubmitFormForWeek(form) {
            //按周操作的是多个工时对象，需要把form表单进行转换
            debugger;
            var weekData = {
                startDate: $("#startDate").val(),
                endDate: $("#endDate").val(),
                TimesheetList: []
            };
            var trList = $(form).find("tr");
            //从1开始，第一行是标题
            for (var i = 1; i < trList.length; i++) {
                var tds = $(trList[i]).find("td");
                weekData.TimesheetList.push({
                    Id: $(tds[0].children[0]).val(),
                    TimesheetDate: $(tds[1].children[0]).val(),
                    ProjectID: $(tds[2].children[0]).val(),
                    Workload: $(tds[3].children[0]).val(),
                    WorkContent: $(tds[4].children[0]).val(),
                    Remarks: $(tds[5].children[0]).val()
                });
            }
            //检验，同一个日期的工时不能超过8


            $.ajax({
                type: "POST",
                url: form.action,
                data: weekData,//JSON.stringify(weekData),
                success: function (data) {
