@using Abp.Web.Mvc.Extensions
@section styles {
    <link href="~/lib/AdminLTE-2.4.10/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/lib/AdminLTE-2.4.10/plugins/iCheck/all.css">
}
@section scripts
{
    <!-- DataTables -->
    <script src="~/lib/AdminLTE-2.4.10/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/AdminLTE-2.4.10/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/lib/AdminLTE-2.4.10/plugins/iCheck/icheck.min.js"></script>

    @Html.IncludeScript("~/js/ProjectManagement/Index.js")
}
<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->
        <div class="box">
            <div class="box box-header">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>项目</label>
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">Alabama</option>
                                <option>Alaska</option>
                                <option>California</option>
                                <option>Delaware</option>
                                <option>Tennessee</option>
                                <option>Texas</option>
                                <option>Washington</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="btn-group-toggle pull-right">
                    <button type="button" name="search" id="search-btn" class="btn btn-success">
                        查询 <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="btn-group-toggle">
                    <button type="button" class="btn btn-info">新增 <i class="fa fa-plus"></i></button>
                    <button type="button" class="btn btn-danger">批量删除 <i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="flat-red" checked>
                            </th>
                            <th>序号</th>
                            <th>是否立项</th>
                            <th>项目代码</th>
                            <th>项目名称</th>
                            <th>项目经理</th>
                            <th>产品经理</th>
                            <th>项目类别</th>
                            <th>项目级别</th>
                            <th>项目性质</th>
                            <th>产线属性</th>
                            <th>项目状态</th>
                            <th>是否投入</th>
                            <th>生效日期</th>
                            <th>失效日期</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>

