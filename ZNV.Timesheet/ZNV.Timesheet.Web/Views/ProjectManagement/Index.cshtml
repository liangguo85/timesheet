                        "data": "IsApproval", "name": "IsApproval", "render": function (d) {
                            return d == true ? "是" : "否";
                        }
                    },
                    {
                        "data": "IsEnabled", "name": "IsEnabled", "render": function (d) {
                            return d == true ? "是" : "否";
                        }
                    },
