@model ZNV.Timesheet.UserSetting.UserSetting
@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEdit", "UserSetting", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.TeamId, "所属科室", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.TeamId, (IEnumerable<SelectListItem>)ViewBag.Teams, String.Empty, new { id = "selectTeam", @class = "form-control select2" })
    </div>
    <div class="form-group pull-right">
        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
    </div>
}

<script>
    $(document).ready(function () {
        $('#selectTeam').select2(select2.team);
    });
</script>


