@model ZNV.Timesheet.Holiday.Holiday
@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEdit", "Holiday", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.HolidayDate, "日期", new { @class = "control-label" })
        @Html.EditorFor(model => model.HolidayDate, new { htmlAttributes = new { @class = "form-control", @onclick = "WdatePicker()" } })
        @Html.ValidationMessageFor(model => model.HolidayDate, "", new { @class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HolidayType, "类型", new { @class = "control-label" })
        @Html.DropDownListFor(model=>model.HolidayType, new List<SelectListItem> {
            new SelectListItem { Value="节假日", Text="节假日"},
            new SelectListItem { Value="工作日", Text="工作日"}
        }, new { @class="form-control"})
        @Html.ValidationMessageFor(model => model.HolidayType, "", new { @class = "text-danger" })
    </div>
    <div class="form-group pull-right">
        <input type="submit" value="保存" class="btn btn-primary btn-lg" />
    </div>
}


